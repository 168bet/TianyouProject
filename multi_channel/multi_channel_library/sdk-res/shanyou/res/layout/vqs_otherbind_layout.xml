<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back4" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定账号"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back5"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="检测到您的账号近期存在异地登录情况，请重新绑定账号和密码.并且牢记您的账号密码，请勿泄露"
            android:textColor="#ff0000"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/vqs_editback1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="账号："
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/other_bind_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/vqs_editback3"
                    android:digits="@string/abc"
                    android:gravity="center_vertical"
                    android:hint="手机号/用户名"
                    android:maxLength="12"
                    android:numeric="signed"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#859098"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/vqs_editback1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="密码："
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/other_bind_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/vqs_editback3"
                    android:digits="@string/abc"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:maxLength="12"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#859098"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/vqs_editback1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="密码："
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/other_bind_password2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/vqs_editback3"
                    android:digits="@string/abc"
                    android:gravity="center_vertical"
                    android:hint="请再次输入密码"
                    android:maxLength="12"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#859098"
                    android:textSize="14dp" />
            </LinearLayout>

            <Button
                android:id="@+id/other_bind_bind"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/vqs_buttonback"
                android:text="绑定"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back3" >
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>