<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/egame_bg_title_list"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/egame_activity_backaccount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_54"
            android:background="@drawable/egame_back_status"
            android:clickable="true"
            android:gravity="left|center_vertical|center_horizontal"
            android:singleLine="true"
            android:text="账户信息"
            android:textColor="@color/egame_usersdk_green"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/list_bg"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <RelativeLayout
            android:id="@+id/egame_account_info_username_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_list_item_selector"
            android:clickable="true"
            android:padding="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="用户名"
                android:textColor="@color/egame_usersdk_dark_gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/egame_account_info_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="12dp"
                android:text="未设置"
                android:textColor="@color/mesgpush_other"
                android:textSize="13dp" />

            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egame_account_info_phone_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_list_item_selector"
            android:clickable="true"
            android:padding="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="手机号"
                android:textColor="@color/egame_usersdk_dark_gray"
                android:textSize="16dp" />
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                
                <TextView
                android:id="@+id/egame_account_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="未绑定"
                android:textColor="@color/mesgpush_other"
                android:textSize="13dp" />
                
                <ImageView
                android:id="@+id/iv_arrow_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/egame_ico_category_arrow_right"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egame_account_info_email_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_list_item_selector"
            android:clickable="true"
            android:padding="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="邮箱"
                android:textColor="@color/egame_usersdk_dark_gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/egame_account_info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="xxxx@163.com"
                android:textColor="@color/mesgpush_other"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egame_account_info_wechat_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_list_item_selector"
            android:clickable="true"
            android:padding="12dp" 
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="微信"
                android:textColor="@color/egame_usersdk_dark_gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/egame_account_info_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="198615833"
                android:textColor="@color/mesgpush_other"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

    <include
        layout="@layout/egame_user_sdk_activity_loading"
        android:visibility="gone" />

</LinearLayout>