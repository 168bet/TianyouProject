<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mc_platform_contacttologin"
                android:layout_width="54dp"
                android:layout_height="42dp"
                android:background="@drawable/left_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:text="联系客服"
                android:textColor="#5d5d5d"

                android:textSize="18sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginTop="41dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_mc_platform_contact_qq1"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/contact_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:text="QQ客服1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_mc_platform_contact_qq2"

                android:layout_weight="1">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/contact_qq" />

                <TextView
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="QQ客服2" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#dedede"></View>

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="18dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#a7a7a7"
                android:text="草鞋游戏客服QQ号" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:visibility="gone"
                android:textColor="#c99f9f"
                android:text="2880623737" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>