<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_menu_iv_user_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/mch_user" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#383838" />

        <LinearLayout
            android:id="@+id/dialog_menu_liner_user_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_menu_iv_user_pack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gift" />

            <TextView
                android:id="@+id/dialog_menu_tv_user_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:text="礼包" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_menu_liner_user_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_menu_iv_user_notice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/notice" />

            <TextView
                android:id="@+id/dialog_menu_tv_user_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:text="公告" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_menu_liner_user_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_menu_iv_user_strategy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gl" />

            <TextView
                android:id="@+id/dialog_menu_tv_user_strategy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:text="攻略" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#161616" />
    
    
    <RelativeLayout         
        android:id="@+id/fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

</LinearLayout>