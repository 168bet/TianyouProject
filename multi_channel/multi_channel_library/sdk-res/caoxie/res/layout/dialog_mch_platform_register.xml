<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_mc_platform_registertologin"
                android:layout_width="54dp"
                android:layout_height="42dp"
                android:background="@drawable/left_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="手机注册"
                android:textColor="#5d5d5d"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="01dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="15dp"
            android:background="#dedede" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_mc_platform_register_account"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#444444"
                android:textColorHint="#bbbbbb"
                android:textSize="14sp" >
            </EditText>

            <requestFocus />

            <View
                android:layout_width="match_parent"
                android:layout_height="01dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="#dedede" >
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <EditText
                android:id="@+id/edt_mc_platform_register_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="number"
                android:password="true"
                android:singleLine="true"
                android:textColor="#444444"
                android:textColorHint="#bbbbbb"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="01dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="#dedede" >
            </View>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp" >

            <EditText
                android:id="@+id/edt_mc_platform_register_msg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/msg_mm"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColor="#444444"
                android:textColorHint="#bbbbbb"
                android:textSize="14sp" />

            <Button
                android:id="@+id/msg_mm"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mc_login_reg_phone_getnum"
                android:text="获取验证码"
                android:textColor="@android:color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="01dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#dedede" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_mc_read"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_mc_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即同意"
                android:textColor="#999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_mc_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《草鞋游戏许可协议》"
                android:textColor="#8d9cb4"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_mc_platform_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="23dp"
            android:background="@drawable/mch_button_selector"
            android:text="完成注册"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>