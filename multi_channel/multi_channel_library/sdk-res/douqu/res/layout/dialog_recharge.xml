        <RelativeLayout
            android:id="@+id/parentPanel_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/alipay"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:drawablePadding="2dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:text="@string/recharge_alipay"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_alipayChecked"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_pay_alipay"
                android:padding="4dp"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_pay_alipay"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parentPanel_goldCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:drawableLeft="@drawable/gold_coin"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawablePadding="1dp"
                android:text="@string/recharge_goldCoin"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remain"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_gold"
                android:layout_toRightOf="@+id/tv_gold"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_goldChecked"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_gold"
                android:padding="4dp"
               />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_gold"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parentPanel_silverCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:drawableLeft="@drawable/silver_coin"
                android:gravity="center_vertical"
                android:drawablePadding="1dp"
                android:text="@string/recharge_silverCoin"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remain2"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_silver"
                android:layout_toRightOf="@+id/tv_silver"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_silverChecked"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_silver"
                android:padding="4dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_silver"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

