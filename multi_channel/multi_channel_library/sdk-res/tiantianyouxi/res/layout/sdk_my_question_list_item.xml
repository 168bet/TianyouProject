<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sdk_main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/sdk_general_margin"
        android:layout_marginRight="@dimen/sdk_general_margin"
        android:layout_marginTop="@dimen/sdk_general_margin"
        android:layout_marginBottom="1px"
        android:background="@drawable/sdk_item_click_selector"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        >

        <RelativeLayout
            android:id="@+id/sdk_ll_faq_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <TextView
                android:id="@+id/sdk_tv_my_question_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="等待回复"
                android:textColor="@color/sdk_main_green"
                android:textSize="@dimen/general_font_size_sm"/>
            <TextView
                android:id="@+id/sdk_tv_my_question_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/sdk_tv_my_question_status"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:layout_marginRight="8dp"
                android:textColor="@color/sdk_main_txt"
                android:textSize="@dimen/general_font_size"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/sdk_tv_my_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/sdk_gray_text"
            android:textSize="@dimen/general_font_size_sm"/>

    </LinearLayout>
</LinearLayout>