<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/sdk_main_bg"
              android:orientation="vertical">

    <com.ltsdkgame.sdk.view.widget.pullable.PullToRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/sdk_pullable_refresh_head"/>
        <!-- 支持所有实现Pullable接口的View -->

        <com.ltsdkgame.sdk.view.widget.pullable.PullableListView
            android:id="@+id/lv_trade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sdk_main_bg"
            android:listSelector="@color/transparent"
        	android:cacheColorHint="@color/transparent"
            android:paddingBottom="@dimen/sdk_general_margin"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"/>

        <include layout="@layout/sdk_pullable_load_more"/>

    </com.ltsdkgame.sdk.view.widget.pullable.PullToRefreshLayout>

</LinearLayout>