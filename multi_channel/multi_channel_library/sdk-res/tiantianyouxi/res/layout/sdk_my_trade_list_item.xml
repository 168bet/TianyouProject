<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sdk_main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_general_margin"
        android:layout_marginRight="@dimen/sdk_general_margin"
        android:layout_marginTop="@dimen/sdk_general_margin"
        android:layout_marginBottom="1px"
        android:background="@drawable/sdk_bg_frame"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/sdk_rl_trade_item_top"
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sdk_tv_my_trade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="500钻石"
                    android:textColor="@color/sdk_light_black"
                    android:textSize="@dimen/general_font_size"/>

                <TextView
                    android:id="@+id/sdk_tv_my_trade_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="支付宝支付50元"
                    android:textColor="@color/sdk_gray_text"
                    android:textSize="@dimen/general_font_size_sm"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sdk_tv_my_trade_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="成功"
                    android:textColor="@color/sdk_main_green"
                    android:textSize="@dimen/general_font_size"/>

                <TextView
                    android:id="@+id/sdk_tv_my_trade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="2016-05-20"
                    android:textColor="@color/sdk_gray_text"
                    android:textSize="@dimen/general_font_size_sm"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/sdk_v_trade_item_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="1px"
            android:background="@color/sdk_line"/>

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/sdk_ll_trade_item_bottom"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sdk_tv_my_trade_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="说明：支付成功"
                android:textColor="@color/sdk_light_black"
                android:textSize="@dimen/general_font_size_mm"/>

            <TextView
                android:id="@+id/sdk_tv_my_trade_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="visible"
                android:text="说明：支付成功"
                android:textColor="@color/sdk_light_black"
                android:textSize="@dimen/general_font_size_mm"/>

            <TextView
                android:id="@+id/sdk_tv_my_trade_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="visible"
                android:text="说明：支付成功"
                android:textColor="@color/sdk_light_black"
                android:textSize="@dimen/general_font_size_mm"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>