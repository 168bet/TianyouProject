<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/sdk_main_color"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="48dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/sdk_warm_tip"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/sdk_main_green"
            android:textSize="@dimen/general_font_size"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_close"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/sdk_close"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="1dp"
        android:background="@color/sdk_main_green"/>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_auto_login_tip"
            android:text="@string/sdk_auto_login_tip_start"
            android:textSize="16sp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/sdk_main_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sdk_gray_button"
            android:gravity="center"
            android:textColor="@color/sdk_while"
            android:text="@string/sdk_userinfo_cancel"
            android:textSize="@dimen/general_font_size"
            android:layout_height="36dp"/>
        <View
            android:background="@color/transparent"
            android:layout_width="20dp"
            android:layout_height="36dp"/>
        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sdk_green_button"
            android:gravity="center"
            android:text="@string/sdk_auto_login"
            android:textColor="@color/sdk_while"
            android:textSize="@dimen/general_font_size"
            android:layout_height="36dp"/>
    </LinearLayout>


</LinearLayout>