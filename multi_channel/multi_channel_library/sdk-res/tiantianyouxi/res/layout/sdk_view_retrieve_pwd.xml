<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_rl_dialog_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sdk_view_bg"
    android:orientation="vertical">

    <com.ltsdkgame.sdk.view.TitleBar
        android:id="@+id/sdk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择注册账号类型"
                android:textColor="@color/sdk_black_text"
                android:textSize="@dimen/general_font_size" />
        </RelativeLayout>
        <!--手机号码注册-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sdk_bg_frame"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sdk_iv_phone_retrieve"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/sdk_view_retrieve_pwd_pitch_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机号码注册"
                    android:textColor="@color/sdk_black_text"
                    android:textSize="@dimen/general_font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sdk_ll_phone_retrieve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/sdk_line" />

                <LinearLayout
                    android:id="@+id/sdk_ly_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/sdk_bg_frame"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/sdk_et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="number"
                            android:maxLength="11"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/sdk_black_text"
                            android:textColorHint="@color/sdk_gray_text"
                            android:textSize="@dimen/general_font_size" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/sdk_et_verification_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.3"
                            android:background="@drawable/sdk_bg_frame"
                            android:hint="请输入验证码"
                            android:imeOptions="flagNoExtractUi"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/sdk_black_text"
                            android:textColorHint="@color/sdk_gray_text"
                            android:textSize="@dimen/general_font_size" />

                        <Button
                            android:id="@+id/sdk_btn_send_verification_code"
                            android:layout_width="92dp"
                            android:layout_height="36dp"
                            android:background="@drawable/sdk_green_button"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="@color/sdk_while"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <!--邮箱注册-->
        <LinearLayout
            android:id="@+id/sdk_ll_email_retrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/sdk_bg_frame"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sdk_iv_email_retrieve"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/sdk_view_retrieve_pwd_pitch_off" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/sdk_black_text"
                    android:text="邮箱注册"
                    android:textSize="@dimen/general_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/sdk_line" />

                <LinearLayout
                    android:id="@+id/sdk_ly_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/sdk_bg_frame"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/sdk_et_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入邮箱"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="number"
                            android:maxLength="20"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/sdk_black_text"
                            android:textColorHint="@color/sdk_gray_text"
                            android:textSize="@dimen/general_font_size" />
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <Button
            android:id="@+id/sdk_btn_next"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/sdk_green_button"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/sdk_while"
            android:textSize="@dimen/general_font_size" />

    </LinearLayout>
</LinearLayout>