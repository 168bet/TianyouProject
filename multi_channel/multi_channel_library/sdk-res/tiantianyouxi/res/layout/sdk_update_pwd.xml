<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/sdk_main_bg"
              android:orientation="vertical">

    <com.ltsdkgame.sdk.view.TitleBar
        android:id="@+id/sdk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_general_margin"
        android:layout_marginRight="@dimen/sdk_general_margin"
        android:layout_marginTop="12dp"
        android:background="@color/sdk_main_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sdk_update_pwd_tip"
            android:textColor="@color/sdk_light_black"
            android:textSize="@dimen/general_font_size"/>


        <EditText
            android:id="@+id/sdk_et_update_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sdk_bg_frame"
            android:layout_marginTop="12dp"
            android:maxLength="15"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/sdk_update_pwd_old"
            android:textColor="@color/sdk_main_txt"
            android:textColorHint="@color/sdk_gray_text"
            android:textSize="@dimen/general_font_size"/>
        <EditText
            android:id="@+id/sdk_et_update_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sdk_bg_frame"
            android:layout_marginTop="12dp"
            android:maxLength="15"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="@string/sdk_update_pwd_new"
            android:textColor="@color/sdk_main_txt"
            android:textColorHint="@color/sdk_gray_text"
            android:textSize="@dimen/general_font_size"/>
        <EditText
            android:id="@+id/sdk_et_update_pwd_renew"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sdk_bg_frame"
            android:layout_marginTop="12dp"
            android:maxLength="15"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:hint="@string/sdk_update_pwd_renew"
            android:textColor="@color/sdk_main_txt"
            android:textColorHint="@color/sdk_gray_text"
            android:textSize="@dimen/general_font_size"/>

        <Button
            android:id="@+id/sdk_btn_update_pwd_finish"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/sdk_green_button"
            android:layout_marginTop="16dp"
            android:text="@string/sdk_update_pwd_finish"
            android:textColor="@color/sdk_while"
            android:textSize="@dimen/general_font_size"/>
    </LinearLayout>

</LinearLayout>