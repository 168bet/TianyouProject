<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"	
    android:layout_height="320dp"	
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/shape_base">	

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/logo"
                />
            <TextView
                android:textColor="#666666"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天游戏 | 通行证"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

        <EditText
            android:inputType="number"
            android:textSize="12sp"
            android:textColor="#333333"
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_edit2"
            android:hint="账号"
            android:textColorHint="#999"/>

        <ImageView
            android:id="@+id/iv_login_showmore"
            android:layout_centerVertical="true"
            android:background="@mipmap/showmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
	<RelativeLayout
	    android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
	    <EditText
	        android:password="true"
	        android:textColorHint="#999"
	        android:textSize="12sp"
	        android:textColor="#333333"
	        android:id="@+id/et_login_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:background="@drawable/shape_edit2"
	        android:hint="密码"/>
	    
	    <ImageView
	        android:layout_centerVertical="true"
            android:id="@+id/iv_login_pwd"
            android:background="@mipmap/ty_pwd_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <Button
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shape_redbtn"
        android:text="登录"
        android:id="@+id/btn_login_login"/>

    <LinearLayout
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_nullbtn"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:text="手机号注册"
                android:textSize="15sp"
                android:textColor="#666666"
                android:id="@+id/btn_login_phoneregister"/>

            <ImageView
                android:id="@+id/shel"
                android:layout_alignParentRight="true"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@mipmap/recommend"
                android:layout_marginTop="5dp"
                android:layout_marginRight="48dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_nullbtn"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:text="快速注册"
                android:textSize="15sp"
                android:textColor="#666666"
                android:id="@+id/btn_login_quickregister"/>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:textColor="#999999"
        android:id="@+id/tv_login_forgetpwd"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/iv_login_line"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@mipmap/line"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="13dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_login_weixin"/>

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_login_qq"/>
    </LinearLayout>

</LinearLayout>
