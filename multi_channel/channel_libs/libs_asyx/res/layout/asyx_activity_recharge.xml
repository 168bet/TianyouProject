<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f1f0" >

    <RelativeLayout
        android:id="@+id/asyx_recharge_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/asyx_recharge_title_color" >

        <Button
            android:id="@+id/asyx_recharge_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/asyx_recharge_back"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/asyx_recharge_title"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/asyx_recharge_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/asyx_sdk_close_white"
            android:onClick="onClick" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/asyx_recharge_title_layout"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/asyx_recharge_type_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.8"
            android:background="@drawable/asyx_recharge_type_shape" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="#61d2fe"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/asyx_recharge_alipay_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/asyx_recharge_selected_bg"
                    android:onClick="onClick"
                    android:text="@string/asyx_recharge_alipay"
                    android:textColor="@color/asyx_recharge_title_color" />

                <Button
                    android:id="@+id/asyx_recharge_weixin_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/asyx_type_button_shape"
                    android:onClick="onClick"
                    android:text="@string/asyx_recharge_weixin"
                    android:textColor="@color/asyx_recharge_title_color" />

                <Button
                    android:id="@+id/asyx_recharge_bank_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/asyx_type_button_shape"
                    android:onClick="onClick"
                    android:text="@string/asyx_recharge_bank"
                    android:textColor="@color/asyx_recharge_title_color" />

                <Button
                    android:id="@+id/asyx_recharge_platform_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/asyx_type_button_shape"
                    android:onClick="onClick"
                    android:text="@string/asyx_recharge_aishangdou"
                    android:textColor="@color/asyx_recharge_title_color" />

                <Button
                    android:id="@+id/asyx_recharge_cards_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/asyx_type_button_shape"
                    android:onClick="onClick"
                    android:text="@string/asyx_recharge_cards"
                    android:textColor="@color/asyx_recharge_title_color" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/asyx_recharge_alipay_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.2"
            android:background="@drawable/asyx_recharge_content_shape"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/asyx_recharge_money_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/asyx_recharge_colon"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asyx_recharge_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/asyx_recharge_money_colon"
                    android:text="@string/asyx_recharge_money_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asyx_recharge_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/asyx_recharge_money_colon"
                    android:text="@string/asyx_recharge_money_text"
                    android:textColor="#62d3ff"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/asyx_recharge_money_text"
                    android:contentDescription="@string/asyx_image_contentDescription"
                    android:src="@drawable/asyx_recharge_item_point" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/asyx_recharge_game_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/asyx_recharge_colon"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asyx_recharge_game_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/asyx_recharge_game_colon"
                    android:text="@string/asyx_recharge_game_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asyx_recharge_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/asyx_recharge_game_colon"
                    android:text="@string/asyx_recharge_game_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/asyx_recharge_game_text"
                    android:contentDescription="@string/asyx_image_contentDescription"
                    android:src="@drawable/asyx_recharge_item_point" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/asyx_recharge_goods_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/asyx_recharge_colon"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asyx_recharge_goods_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/asyx_recharge_goods_colon"
                    android:text="@string/asyx_recharge_goods_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asyx_recharge_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/asyx_recharge_goods_colon"
                    android:text="@string/asyx_recharge_goods_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/asyx_recharge_goods_text"
                    android:contentDescription="@string/asyx_image_contentDescription"
                    android:src="@drawable/asyx_recharge_item_point" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/asyx_recharge_account_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/asyx_recharge_colon"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asyx_recharge_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/asyx_recharge_account_colon"
                    android:text="@string/asyx_recharge_account_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asyx_recharge_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/asyx_recharge_account_colon"
                    android:text="@string/asyx_recharge_account_text"
                    android:textColor="@color/asyx_options_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/asyx_recharge_account_text"
                    android:contentDescription="@string/asyx_image_contentDescription"
                    android:src="@drawable/asyx_recharge_item_point" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/asyx_recharge_hint_text"
                android:textColor="#62d3ff"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/asyx_image_contentDescription"
                android:scaleType="fitCenter"
                android:src="@drawable/asyx_recharge_divider" />

            <Button
                android:id="@+id/asyx_recharge_alipay_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/asyx_recharge_submit_background"
                android:onClick="onClick"
                android:paddingBottom="12dp"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:paddingTop="12dp"
                android:text="@string/asyx_recharge_submit"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <include layout="@layout/asyx_recharge_platform_order" />

        <include layout="@layout/asyx_recharge_cards_type" />

        <include layout="@layout/asyx_recharge_cards_content" />
    </LinearLayout>

</RelativeLayout>