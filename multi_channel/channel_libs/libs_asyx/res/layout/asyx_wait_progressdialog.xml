<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/asyx_dialog_shape" >

    <ProgressBar
        android:id="@+id/id_wait_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:indeterminateDrawable="@drawable/asyx_wait_progress_medium" />

    <TextView
        android:id="@+id/id_wait_progressbar_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_wait_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#5cc1f9"
        android:textSize="16sp" />

</RelativeLayout>