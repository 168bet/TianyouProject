<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asyx_dialog_shape" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/asyx_background_radius"
        android:background="@android:color/transparent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="14dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/asyx_image_contentDescription"
                    android:scaleType="fitCenter"
                    android:src="@drawable/asyx_login_logo" />

                <Button
                    android:id="@+id/asyx_login_colse"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/asyx_sdk_close" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/asyx_registered_divider"
                    android:background="@color/asyx_registered_selected" />

                <EditText
                    android:id="@+id/asyx_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/asyx_registered_edittext"
                    android:background="@null"
                    android:hint="@string/asyx_registered_normal_hint"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/asyx_registered_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/asyx_registered_divider"
                    android:background="@color/asyx_registered_divider" />

                <EditText
                    android:id="@+id/asyx_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/asyx_registered_edittext"
                    android:background="@null"
                    android:hint="@string/asyx_registered_password_hint"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/asyx_registered_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/asyx_registered_divider"
                    android:background="@color/asyx_registered_selected" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/asyx_registered_edittext"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/asyx_login_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/asyx_registered_divider"
                    android:layout_weight="1"
                    android:background="@color/asyx_registered_selected"
                    android:text="@string/asyx_login_change_password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/asyx_registered_textsize" />

                <Button
                    android:id="@+id/asyx_login_find_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/asyx_registered_divider"
                    android:layout_weight="1"
                    android:background="@color/asyx_registered_selected"
                    android:text="@string/asyx_login_find_password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/asyx_registered_textsize" />
            </LinearLayout>

            <Button
                android:id="@+id/asyx_login_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/asyx_registered_edittext"
                android:layout_marginTop="2dp"
                android:background="@color/asyx_registered_selected"
                android:text="@string/asyx_login_submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/asyx_registered_textsize" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>