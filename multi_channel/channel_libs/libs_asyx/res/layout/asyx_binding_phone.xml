<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/asyx_automatic_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/asyx_binding_title"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/asyx_binding_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/asyx_sdk_close_white" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/asyx_binding_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_edittext"
            android:background="@null"
            android:hint="@string/asyx_registered_phone_hint"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="@dimen/asyx_registered_textsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_divider"
            android:background="@color/asyx_registered_divider" />

        <EditText
            android:id="@+id/asyx_binding_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_edittext"
            android:background="@null"
            android:hint="@string/asyx_registered_password_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="@dimen/asyx_registered_textsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_divider"
            android:background="@color/asyx_registered_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_edittext"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/asyx_binding_sms_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/asyx_registered_sms_hint"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="@dimen/asyx_registered_textsize" />

            <Button
                android:id="@+id/asyx_binding_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/asyx_registered_sms_background"
                android:text="@string/asyx_registered_sms_get"
                android:textColor="@android:color/white"
                android:textSize="@dimen/asyx_registered_textsize" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/asyx_registered_divider"
            android:background="@color/asyx_registered_divider" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/asyx_registered_background"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="8dp"
        android:text="@string/asyx_binding_hint"
        android:textColor="@color/asyx_registered_normal"
        android:textSize="12sp" />

    <Button
        android:id="@+id/asyx_binding_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="@string/asyx_binding_submit"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>
