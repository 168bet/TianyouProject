<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_gray2"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/layout_space_small"
        android:padding="@dimen/layout_space_little" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_space_small"
            android:background="@drawable/shape_bg_white_fill"
            android:hint="请输入密码"
            android:textColor="@color/color_gray_2"
            android:textColorHint="@color/color_gray_0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_space_small"
            android:layout_marginRight="@dimen/layout_space_small"
            android:background="@color/color_gray_0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_space_small"
            android:background="@drawable/shape_bg_white_fill"
            android:hint="请再次输入密码"
            android:textColor="@color/color_gray_2"
            android:textColorHint="@color/color_gray_0" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/text_alert_confirm2"
        style="@style/style_text_red_long"
        android:text="确定" />

</LinearLayout>