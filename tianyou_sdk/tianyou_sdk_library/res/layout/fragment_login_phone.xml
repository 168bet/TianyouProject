<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/edit_home_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white_fill"
            android:hint="@string/ty_phone_number"
            android:padding="@dimen/layout_space_small"
            android:singleLine="true"
            android:inputType="phone"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_gray_1"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:id="@+id/img_home_user_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_space_small"
            android:src="@drawable/ty_login_pull"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_home_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_bg_white_fill"
            android:hint="@string/ty_sms_code"
            android:padding="@dimen/layout_space_small"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_gray_1"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/text_home_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_bg_jacinth_2"
            android:paddingBottom="@dimen/layout_space_little"
            android:paddingLeft="@dimen/layout_space_small"
            android:paddingRight="@dimen/layout_space_small"
            android:paddingTop="@dimen/layout_space_little"
            android:text="@string/ty_get_code"
            android:textColor="@color/color_jacinth"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space_small" >

        <LinearLayout
            android:id="@+id/layout_login_quick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/layout_space_small"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_bule_fill"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ty_one_key_login"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_common" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ty_send_sms"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_home_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_jacinth_fill"
            android:gravity="center"
            android:padding="@dimen/layout_space_small"
            android:text="@string/ty_entry_game"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space_small" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/layout_space_little"
                android:drawableRight="@drawable/ty_login_right"
                android:text="@string/ty_switch_login"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/img_login_way_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_space_small"
                android:src="@drawable/ty_login_way_0"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_login_way_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_space_small"
                android:src="@drawable/ty_login_way_1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_login_way_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_space_small"
                android:src="@drawable/ty_login_way_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_home_quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_white"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="@string/ty_quick_register"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

</LinearLayout>