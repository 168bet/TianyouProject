<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/img_dialog_gift_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/close_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="恭喜你领取成功"
            android:textColor="@color/color_red"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包码："
                android:textColor="@color/color_text_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_gift_dialog_cdkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="礼包记录在已领取礼包中查看"
            android:textColor="@color/color_text_gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_dialog_copy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_btn_red"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="复制礼包码"
            android:textColor="@color/color_white"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>