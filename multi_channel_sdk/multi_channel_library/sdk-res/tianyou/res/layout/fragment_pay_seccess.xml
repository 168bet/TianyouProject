<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay_success"
        android:layout_marginTop="20dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你充值成功"
        android:textSize="30sp"
        android:textColor="#000"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text_seccess_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_gray"
            android:text="充值区服"/>

        <TextView
            android:id="@+id/text_seccess_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_gray"
            android:text="充值金额"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_seccess_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值订单"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_seccess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_blue_fill"
            android:textColor="@color/color_white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="返回游戏"/>

        <Button
            android:id="@+id/btn_seccess_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续充值"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/shape_btn_blue_fill"
            android:textColor="@color/color_white"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>