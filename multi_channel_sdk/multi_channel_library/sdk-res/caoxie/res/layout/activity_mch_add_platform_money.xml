<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
 
 
    android:orientation="vertical" 
>
 
    <include layout="@layout/util_mch_header" />

    <ScrollView
        android:id="@+id/sv_scroll"
        android:layout_width="match_parent"    
 
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp" >

                    <TextView
                        android:id="@+id/tv_chongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="充值账号"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_mch_account"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/tv_chongzhi"
                        android:background="@drawable/mch_button_eaeaea_selector"
                        android:padding="07sp"
                        android:text="18521508558"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="07dp"
                    android:background="#e0e0e0" />

                <!--
             <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e0e0e0" />
                -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="充值数量"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="(1平台币 = 1人民币)"
                        android:textColor="#686868"
                        android:textSize="10sp" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="01dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp" >

                    <EditText
                        android:id="@+id/edt_mch_ptb_number"
                        style="?android:attr/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_rmb"
                        android:background="@null"
                        android:drawableLeft="@drawable/money"
                        android:drawablePadding="07dp"
                        android:ems="10"
                        android:hint="请输入充值数量"
                        android:inputType="number"
                        android:textColor="#aeaeae"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="单位:平台币"
                        android:textColor="#e22635"
                        android:textSize="10sp" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="01dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e0e0e0" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:background="#f2f2f2" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="07dp"
                android:background="#e0e0e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="05dp"
                        android:text="金额:"
                        android:textColor="#5f5f5f"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_mch_pay_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$66.3"
                        android:textColor="#e22635"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_mch_addptb_zfb"
                        android:layout_width="215dp"
                        android:layout_height="36dp"
                        android:background="@drawable/alipay" />

                    <Button
                        android:id="@+id/btn_mch_addptb_wx"
                        android:layout_width="215dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/weixinpay" />
                  
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>