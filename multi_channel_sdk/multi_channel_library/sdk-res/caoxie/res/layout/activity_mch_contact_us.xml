<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/util_mch_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_mc_platform_contact_qq1"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/qq_af" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="07dp"
                android:text="QQ客服1"
                android:textColor="#45a5ff"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mc_platform_contact_qq2"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/qq_af" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="07dp"
                android:text="QQ客服2"
                android:textColor="#45a5ff"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>