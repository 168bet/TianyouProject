<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/egame_usersdk_white"
    android:layout_gravity="center">

    <include layout="@layout/egame_user_sdk_title" />

    <RadioGroup
        android:id="@+id/rg_register_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/egame_edge_distance"
        android:layout_marginRight="@dimen/egame_edge_distance"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_phone_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/egame_register_tab_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/phone_number"
            android:textSize="16dp"
            android:textColor="@drawable/egame_green_gary_color_selector" />

        <RadioButton
            android:id="@+id/rb_username_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/egame_register_tab_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/username"
            android:textSize="16dp"
            android:textColor="@drawable/egame_green_gary_color_selector" />
    </RadioGroup>
	
    <LinearLayout 
        android:id="@+id/ll_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    </LinearLayout>

