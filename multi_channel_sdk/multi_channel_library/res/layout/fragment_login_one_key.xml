<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_one_key_quick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notify_title_height"
        android:layout_marginTop="@dimen/layout_space_little"
        android:background="@drawable/shape_bg_jacinth_fill"
        android:gravity="center"
        android:padding="@dimen/layout_space_big" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ty_one_way_0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_space_little"
            android:text="@string/ty_quick_start"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_common" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/notify_title_height"
        android:layout_marginTop="@dimen/layout_space_small"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/notify_title_height"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/layout_space_big">

            <TextView
                android:id="@+id/text_one_key_msm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_bule_fill"
                android:drawableLeft="@drawable/ty_one_way_1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/ty_sms_login"
                android:visibility="visible"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_common" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btn_facebook_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_common"
                android:visibility="visible" />
        </FrameLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

	        <TextView
	            android:id="@+id/text_one_key_qq"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/shape_btn_green_fill"
	            android:drawableLeft="@drawable/ty_one_way_2"
	            android:gravity="center"
	            android:singleLine="true"
	            android:text="@string/ty_qq_login"
	            android:textColor="@color/color_white"
	            android:textSize="@dimen/text_size_common" />
	        
	        <Button
	            android:id="@+id/btn_google_login"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/ccc"
	            android:textSize="@dimen/text_size_common"
	            android:textColor="@color/color_gray_1"
	            android:paddingLeft="@dimen/layout_space_small"
	            android:text="@string/ty_google_login"/>
        </FrameLayout>
    </LinearLayout>

            <!--  android:background="@drawable/ty_one_way_google" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/text_one_key_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ty_account_login"
            android:textColor="@color/color_gray_1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/text_one_key_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/ty_agree_server"
            android:textColor="@color/color_gray_1"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

</LinearLayout>