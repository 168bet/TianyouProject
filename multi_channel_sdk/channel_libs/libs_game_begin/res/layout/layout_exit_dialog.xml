<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exit_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_gravity="left"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:text="退出"
        android:textColor="@color/exit_dialog_text"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/exit_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:gravity="center_vertical"
        android:text="您确定要退出吗?"
        android:textColor="@color/exit_dialog_text"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/exit_dialog_divider"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/exit_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/exit_dialog_btn"
            android:background="@drawable/exit_dialog_left_btn_selector"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/exit_dialog_divider"
            />

        <Button
            android:id="@+id/exit_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/exit_dialog_btn"
            android:background="@drawable/exit_dialog_right_btn_selector"
            />

    </LinearLayout>
</LinearLayout>
